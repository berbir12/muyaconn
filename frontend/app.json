{
  "expo": {
    "name": "Muyacon",
    "slug": "muyacon-marketplace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "muyacon",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Connect with skilled professionals for any task. Post jobs or offer your services on Ethiopia's leading marketplace platform.",
    "platforms": ["ios", "android"],
    "githubUrl": "https://github.com/yourusername/muyacon",
    "primaryColor": "#8B5CF6",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.muyacon.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos for your profile and task images.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to select images for your profile and tasks.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to help you find nearby taskers and services.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice messages in chat."
      },
      "associatedDomains": ["applinks:muyacon.app"],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.muyacon.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#8B5CF6"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "resizeMode": "contain"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them in your profile and tasks.",
          "cameraPermission": "The app accesses your camera to let you take photos for your profile and tasks."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
